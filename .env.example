# API Keys and Environment Variables
# Copy this file to .env and fill in your actual values

# ===== AI APIs =====
# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== Google APIs =====
GOOGLE_API_KEY=your_google_api_key_here

# ===== Apify API =====
# For Instagram and social media scraping
# Format: apify_api_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
APIFY_API_TOKEN=your_apify_api_token_here
APIFY_INSTAGRAM_ENDPOINT=https://api.apify.com/v2/acts/apify~instagram-scraper/run-sync-get-dataset-items

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379

# ===== Database (Optional) =====
DATABASE_URL=sqlite:///./enrichment.db

# ===== FastAPI Configuration =====
API_SECRET_KEY=your_random_secret_key_here_change_in_production
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== Feature Flags =====
ENABLE_AI_ANALYSIS=true
CACHE_TTL_HOURS=24
MAX_CONCURRENT_JOBS=5

# ===== Serper API =====
# For brand name to URL resolution (Google Search)
SERPER_API_KEY=your_serper_api_key_here

# ===== SimilarWeb API (optional) =====
# For traffic estimation
SIMILARWEB_API_KEY=your_similarweb_api_key_here

# ===== Apollo.io API (optional) =====
# For contact enrichment (company info + decision-maker emails)
APOLLO_API_KEY=your_apollo_api_key_here

# ===== Scraping Configuration =====
REQUESTS_PER_SECOND=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ===== Playwright Configuration =====
PLAYWRIGHT_HEADLESS=true
